<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="gss.newWarehouseManage_R1.controller.grShipment" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>grByShip}">
				<content>
					<Toolbar>
						<Breadcrumbs class="sapUiTinyMarginBegin" id="breadCrumbs"/>
					</Toolbar>
					<Toolbar id="toolbarheader">
						<Input class="sapUiTinyMarginBegin" id="inputValue" value="{matList>/TO}" valueHelpRequest="onHandlePoHelp" submit="iGetInput"
							liveChange="onHandleBinding" width="100%" textAlign="Begin"/>
						<Button id="scanButton" tooltip="{i18n>barCode}" icon="sap-icon://bar-code" press="onHandleScanInput" ariaLabelledBy="actionButtonLabel"/>
					</Toolbar>
					<Table id="table" class="sapUiTinyMargin" mode="MultiSelect" selectionChange="onSingleSelect" growing="true" growingScrollToLoad="true"
						width="auto" items="{itemList>/aItems}" visible="false">
						<headerToolbar>
							<Toolbar>
								<Title text="{i18n>delHeadInfo}"/>
								<ToolbarSpacer/>
							</Toolbar>
						</headerToolbar>
					<columns>
							<Column>
								<header>
									<Label text="{i18n>delNo}" design="Bold"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="{i18n>name}" design="Bold"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="{i18n>vendor}" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
								<Label text="{i18n>totWeigh}" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="{i18n>shipPoint}" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="{i18n>loadStatus}" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="{i18n>huInd}" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="{i18n>toInd}" design="Bold"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text id="vbeln" text="{itemList>Vbeln}"/>
									<Text text="{itemList>LifnrName}"/>
									<Text text="{itemList>Lifnr}"/>
									<Text text="{itemList>Btgew} {itemList>Gewei}"/>
									<Text text="{parts:[{path:'itemList>Vstel'}],formatter: '.formatter.shipPoint'}"/>
									<Text id="loadStat" text="{parts:[{path:'itemList>LoadStat'}],formatter: '.formatter.grIndicator'}"/>
									<Text text="{parts:[{path:'itemList>HuInd'}],formatter: '.formatter.huIndicator'}"/>
									<Text text="{parts:[{path:'itemList>ToInd'}],formatter: '.formatter.huIndicator'}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer id="footer"
					class="sapContrast sapContrastPlus sapMBar sapMBar-CTX sapMContent-CTX sapMFooter-CTX sapMIBar sapMIBar-CTX sapMPageFooter">
					<Bar id="footerbar">
						<!--<contentMiddle>-->
						<contentLeft>
							<!--<Toolbar id="footerbar" visible="false">-->
							<Button id="back" icon="sap-icon://nav-back" press="onNavBack" tooltip="{i18n>back}" visible="false"/>
							<Button id="message-popup" icon="sap-icon://message-popup" tooltip="{i18n>stat}" type="Emphasized" press="handleMessagePopoverPress"/>
						</contentLeft>
						<contentRight>
							<Button id="Lload" class="sapUiTinyMargin sapUiResponsiveContentPadding button_Size LUnloadButton" icon="sap-icon://supplier"
								press="onHandleUnload" tooltip="{i18n>load}"/>
							<Button id="more" class="sapUiTinyMargin sapUiResponsiveContentPadding button_Size moreButton" icon="sap-icon://detail-view"
								press="handleMore" tooltip="{i18n>more}"/>
							<Button id="items" class="sapUiTinyMargin sapUiResponsiveContentPadding button_Size itemsButton" icon="sap-icon://activity-items"
								press="onHandleItems" tooltip="{i18n>items}"/>
							<Button id="ship" class="sapUiTinyMargin sapUiResponsiveContentPadding button_Size shipButton" icon="sap-icon://shipping-status"
								press="onHandleShip" visible="false" enabled="false" tooltip="{i18n>shipment}"/>
							<Button id="GTO" class="sapUiTinyMargin sapUiResponsiveContentPadding button_Size GTOButton" icon="sap-icon://create" press="onGenerateTO"
								visible="false" tooltip="{i18n>generateTO}"/>
							<Button id="TOEx" class="sapUiTinyMargin sapUiResponsiveContentPadding button_Size TOExButton" icon="sap-icon://bbyd-active-sales"
								press="onHandleTOEx" visible="false" tooltip="{i18n>toExec}"/>
							<Button id="post" class="sapUiTinyMargin sapUiResponsiveContentPadding button_Size postButton" icon="sap-icon://paper-plane"
								press="onPostGI" visible="false" tooltip="{i18n>post}"/>
						</contentRight>
						<!--</contentMiddle>-->
						<!--</Toolbar>-->
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>