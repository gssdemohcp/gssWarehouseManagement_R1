<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="confirm" title="{i18n>alertDialog}" class="sapUiResponsiveMargin sapUiPopupWithPadding" icon="sap-icon://alert" afterClose="onClose">
		<content>
			<Text id="popup"/>
		</content>
		<beginButton>
			<Button text = "{i18n>yes}" press="onConfirm"/>
		</beginButton>
		<endButton>
			<Button text = "{i18n>no}" press="onCancel"/>
		</endButton>		
	</Dialog>
</core:FragmentDefinition>