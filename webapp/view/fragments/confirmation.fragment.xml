<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="confirm" title="Alert" class="sapUiResponsiveMargin sapUiPopupWithPadding" icon="sap-icon://alert" afterClose="onClose">
		<content>
			<Text id="popup"/>
		</content>
		<beginButton>
			<Button text = "Yes" press="onConfirm"/>
		</beginButton>
		<endButton>
			<Button text = "No" press="onCancel"/>
		</endButton>		
	</Dialog>
</core:FragmentDefinition>