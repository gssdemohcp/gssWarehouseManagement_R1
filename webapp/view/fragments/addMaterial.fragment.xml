<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="addMaterial" title="{i18n>addMatTit}" class="sapUiResponsiveMargin sapUiPopupWithPadding" icon="sap-icon://add"
		contentHeight="30%" contentWidth="20%">
		<content>
			<VBox>
				<HBox>
					<Input id="material" class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" value="" placeholder="{i18n>enterMaterial}" width="90%"/>
					<Button id="addMatScan" class="sapUiTinyMarginTop" tooltip="{i18n>barCode}" icon="sap-icon://bar-code" press="packMatScan" ariaLabelledBy="actionButtonLabel"
						width="5%" visible="true"/>
				</HBox>
				<HBox>
					<Input id="quantity" class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" value="" placeholder="{i18n>enterQuant}" width="90%"/>
					<Button id="addQuaScan" class="sapUiTinyMarginTop" tooltip="{i18n>barCode}" icon="sap-icon://bar-code" press="packQuaScan" ariaLabelledBy="actionButtonLabel"
						width="5%" visible="true"/>
				</HBox>
				<HBox>
					<Input id="unit" class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" value="" placeholder="{i18n>enterUnit}" width="90%"/>
					<Button id="addUnitScan" class="sapUiTinyMarginTop" tooltip="{i18n>barCode}" icon="sap-icon://bar-code" press="packUnitScan" ariaLabelledBy="actionButtonLabel"
						width="5%" visible="true"/>
				</HBox>
			</VBox>
		</content>
		<beginButton>
			<Button text="{i18n>save}" press="onMatSave"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" press="onMatCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>