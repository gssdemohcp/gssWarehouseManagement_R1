<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="gss.newWarehouseManage_R1.controller.grShipment" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="GR by Shipment">
				<content>
					<Toolbar>
						<Breadcrumbs class="sapUiTinyMarginBegin" id="breadCrumbs"/>
					</Toolbar>
					<Toolbar id="toolbarheader">
						<Input class="sapUiTinyMarginBegin" id="inputValue" value="{matList>/TO}" valueHelpRequest="onHandlePoHelp" submit="iGetInput"
							liveChange="onHandleBinding" width="100%" textAlign="Begin"/>
						<Button id="scanButton" tooltip="Bar Code scanner" icon="sap-icon://bar-code" press="onHandleScanInput" ariaLabelledBy="actionButtonLabel"/>
					</Toolbar>
					<Table id="table" class="sapUiTinyMargin" mode="MultiSelect" selectionChange="onSingleSelect" growing="true" growingScrollToLoad="true"
						width="auto" items="{itemList>/aItems}">
						<headerToolbar>
							<Toolbar>
								<Title text="Delivery Header Information"/>
								<ToolbarSpacer/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<header>
									<Label text="Delivery No" design="Bold"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Name" design="Bold"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Vendor" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="Total Weight" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="Shipping Point" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="Load/Unload Status" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="HU Indicator" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="TO Indicator" design="Bold"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text id="vbeln" text="{itemsList>Vbeln}"/>
									<Text text="{itemList>LifnrName}"/>
									<Text text="{itemList>Lifnr}"/>
									<Text text="{itemList>Btgew} {itemsList>Gewei}"/>
									<Text text="{parts:[{path:'itemList>Vstel'}],formatter: '.formatter.shipPoint'}"/>
									<Text id="loadStat" text="{parts:[{path:'itemList>LoadStat'}],formatter: '.formatter.grIndicator'}"/>
									<Text text="{parts:[{path:'itemList>HuInd'}],formatter: '.formatter.huIndicator'}"/>
									<Text text="{parts:[{path:'itemList>ToInd'}],formatter: '.formatter.huIndicator'}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer id="footer"
					class="sapContrast sapContrastPlus sapMBar sapMBar-CTX sapMContent-CTX sapMFooter-CTX sapMIBar sapMIBar-CTX sapMPageFooter">
					<Bar id="footerbar" visible="false">
						<!--<contentMiddle>-->
						<contentLeft>
							<!--<Toolbar id="footerbar" visible="false">-->
							<Button id="back" icon="sap-icon://nav-back" press="onNavBack" tooltip="Back"/>
							<Button id="message-popup" icon="sap-icon://message-popup" tooltip="Status" type="Emphasized" press="handleMessagePopoverPress"
								visible="false"/>
						</contentLeft>
						<contentRight>
							<Button id="LUnload" icon="sap-icon://supplier" press="onHandleUnload" tooltip="Unload"  enabled="false" text="Unload"/>
							<Button id="more" icon="sap-icon://detail-view" press="handleMore" enabled="false" text="More"/>
							<Button id="items" icon="sap-icon://activity-items" press="onHandleItems" enabled="false" text="Items"/>
							<Button id="ship" icon="sap-icon://shipping-status" press="onHandleShip" enabled="false" text="Shipment"/>
							<Button id="GTO" icon="sap-icon://create" press="onGenerateTO" visible="false" enabled="false" text="Generate TO"/>
							<Button id="TOEx" icon="sap-icon://bbyd-active-sales" press="onHandleTOEx" visible="false" enabled="false" text="TO Execution"/>
							<Button id="post" icon="sap-icon://paper-plane" press="onPostGR" visible="false" enabled="false" text="Post"/>
						</contentRight>
						<!--</contentMiddle>-->
						<!--</Toolbar>-->
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>