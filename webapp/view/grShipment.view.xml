<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="gss.newWarehouseManage_R1.controller.grShipment" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="GR by Shipment">
				<content>
					<Toolbar>
						<Breadcrumbs class="sapUiTinyMarginBegin" id="breadCrumbs"/>
					</Toolbar>
					<Toolbar id="toolbarheader">
						<Input class="sapUiTinyMarginBegin" id="inputValue" value="{matList>/TO}" valueHelpRequest="onHandlePoHelp" submit="iGetInput"
							liveChange="onHandleBinding" width="100%" textAlign="Begin"/>
						<Button id="scanButton" tooltip="Bar Code scanner" icon="sap-icon://bar-code" press="onHandleScanInput" ariaLabelledBy="actionButtonLabel"/>
					</Toolbar>
					<Table id="table" class="sapUiTinyMargin" mode="MultiSelect" selectionChange="onSingleSelect" growing="true" growingScrollToLoad="true"
						width="auto" items="{itemsList>/aItems}">
						<headerToolbar>
							<Toolbar>
								<Title text="Delivery Header Information"/>
								<ToolbarSpacer/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<header>
									<Label text="Delivery No" design="Bold"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Name" design="Bold"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Vendor" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="Total Weight" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="Shipping Point" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="Load/Unload Status" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="HU Indicator" design="Bold"/>
								</header>
							</Column>
							<Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
								<header>
									<Label text="TO Indicator" design="Bold"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text id="vbeln" text="{itemsList>Vbeln}"/>
									<Text text="{itemsList>LifnrName}"/>
									<Text text="{itemsList>Lifnr}"/>
									<Text text="{itemsList>Btgew} {itemsList>Gewei}"/>
									<Text text="{parts:[{path:'itemsList>Vstel'}],formatter: '.formatter.shipPoint'}"/>
									<Text id="loadStat" text="{parts:[{path:'itemsList>LoadStat'}],formatter: '.formatter.grIndicator'}"/>
									<Text text="{parts:[{path:'itemsList>HuInd'}],formatter: '.formatter.huIndicator'}"/>
									<Text text="{parts:[{path:'itemsList>ToInd'}],formatter: '.formatter.huIndicator'}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>