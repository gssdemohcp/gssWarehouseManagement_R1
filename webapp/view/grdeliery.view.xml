<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="gss.newWarehouseManage_R1.controller.grdelivery" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="GR by Delivery">
				<content>
					<Toolbar>
						<Breadcrumbs class="sapUiTinyMarginBegin" id="breadCrumbs"/>
					</Toolbar>
					<Toolbar id="toolbarheader">
						<Input class="sapUiTinyMarginBegin" id="inputValue" value="{matList>TO}" valueHelpRequest="onHandlePoHelp" submit="iGetInput"
							liveChange="onHandleBinding" width="100%" textAlign="Begin"/>
						<Button id="scanButton" tooltip="Bar Code scanner" icon="sap-icon://bar-code" press="onHandleScanInput" ariaLabelledBy="actionButtonLabel"/>
					</Toolbar>
					<f:SimpleForm id="GRDForm" editable="false" layout="ResponsiveGridLayout" title="Delivery Header Information" labelSpanXL="3" labelSpanL="3"
						labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
						columnsL="1" columnsM="1" singleContainerFullSize="false" visible="false">
						<f:content>
							<HBox>
								<VBox>
									<Label class="sapUiTinyMarginTop" text="Load/Unload Status"/>
									<Label class="sapUiTinyMarginTop" text="Vendor"/>
									<Label class="sapUiTinyMarginTop" text="Name"/>
									<Label class="sapUiTinyMarginTop" text="Receiving Point"/>
									<Label class="sapUiTinyMarginTop" text="Receiving Date"/>
									<Label class="sapUiTinyMarginTop" text="Total Weight"/>
									<Label class="sapUiTinyMarginTop" text="No of Packages"/>
									<Label class="sapUiTinyMarginTop" text="HU Indicator"/>
									<Label class="sapUiTinyMarginTop" text="TO Indicator"/>
								</VBox>
								<VBox>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" id="loadIndicator"
										text="{parts:[{path:'itemList>/aItems/0/LoadStat'}],formatter: '.formatter.grIndicator'}"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" text="{itemList>/aItems/0/Lifnr}"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" text="{itemList>/aItems/0/LifnrName}"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle"
										text="{parts:[{path:'itemList>/aItems/0/Vstel'}],formatter: '.formatter.shipPoint'}"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle"
										text="{path: 'itemList>/aItems/0/Lfdat',type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'}}"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" text="{itemList>/aItems/0/Btgew} {itemList>/aItems/0/Gewei}"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" text="{= parseFloat(${itemList>/aItems/0/Anzpk}) }"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle"
										text="{parts:[{path:'itemList>/aItems/0/HuInd'}],formatter: '.formatter.huIndicator'}"/>
									<Text class="sapUiTinyMarginTop sapUiTinyMarginBegin dataStyle" id="toInd"
										text="{parts:[{path:'itemList>/aItems/0/ToInd'}],formatter: '.formatter.huIndicator'}"/>
								</VBox>
							</HBox>
						</f:content>
					</f:SimpleForm>
				</content>
				<footer id="footer"
					class="sapContrast sapContrastPlus sapMBar sapMBar-CTX sapMContent-CTX sapMFooter-CTX sapMIBar sapMIBar-CTX sapMPageFooter">

					<Bar id="footerbar">

						<!--<contentMiddle>-->
						<contentLeft>
							<!--<Toolbar id="footerbar" visible="false">-->
							<Button id="back" icon="sap-icon://nav-back" press="onNavBack" tooltip="Back"/>
							<Button id="message-popup" icon="sap-icon://message-popup" tooltip="Status" type="Emphasized" press="handleMessagePopoverPress"
							/>
						</contentLeft>
						<contentRight>

							<Button id="LUnload" icon="sap-icon://supplier" press="onHandleUnload" tooltip="Unload"/>
							<Button id="more" icon="sap-icon://detail-view" press="handleMore" tooltip="More"/>
							<Button id="items" icon="sap-icon://activity-items" press="onHandleItems" tooltip="Items"/>
							<Button id="GTO" icon="sap-icon://create" press="onGenerateTO" tooltip="Generate TO"/>
							<Button id="TOEx" icon="sap-icon://bbyd-active-sales" press="onHandleTOEx" visible="false" tooltip="TO Execution"/>
							<Button id="post" icon="sap-icon://paper-plane" press="onPostGR" visible="false" tooltip="Post"/>

						</contentRight>
						<!--</contentMiddle>-->
						<!--</Toolbar>-->
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>