<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="gss.newWarehouseManage_R1.controller.unpackHu"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Pack/UnPack">
				<content>
					<Table id="unpackHUTable" class="sapUiTinyMarginTop dataStyle" growing="true" growingScrollToLoad="true" width="auto"
						items="{HUModel>/aItems}" mode="MultiSelect" selectionChange="unpackItemSelect">
						<headerToolbar>
							<Toolbar>
								<Title text="Lower Level HU List"/>
								<ToolbarSpacer/>
								<Button id="addItem" tooltip="Add Item" icon="sap-icon://add" press="onAddItem" visible="false"/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column hAlign="Left">
								<header>
									<Label text="Handling Unit" design="Bold"/>
								</header>
							</Column>
							<Column hAlign="Left">
								<header>
									<Label text="Description" design="Bold"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{HUModel>Unvel}"/>
									<Text text="{HUModel>Maktx}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer id="footer"
					class="sapContrast sapContrastPlus sapMBar sapMBar-CTX sapMContent-CTX sapMFooter-CTX sapMIBar sapMIBar-CTX sapMPageFooter">
					<Bar id="footerbar">
						<!--<contentMiddle>-->
						<contentLeft>
							<!--<Toolbar id="footerbar" visible="false">-->
							<Button id="back" icon="sap-icon://nav-back" press="onNavBack" tooltip="Back"/>
							<Button id="message-popup" icon="sap-icon://message-popup" tooltip="Status" type="Emphasized" press="handleMessagePopoverPress"/>
						</contentLeft>
						<contentRight>
							<Button id="accept" press="onHandleAccept" icon="sap-icon://accept"/>
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>